# SpeakASAP Platform Environment Variables
# Port Range: 42xx (4200-4219)
# Copy this file to .env and configure your values

# ============================================
# Port Configuration (42xx Range)
# ============================================
# Service Ports
CONTENT_SERVICE_PORT=4201
CERTIFICATION_SERVICE_PORT=4202
ASSESSMENT_SERVICE_PORT=4203
COURSE_SERVICE_PORT=4205
EDUCATION_SERVICE_PORT=4206
USER_SERVICE_PORT=4207
PAYMENT_SERVICE_PORT=4208
NOTIFICATION_SERVICE_PORT=4209
API_GATEWAY_PORT=4210
FRONTEND_PORT=4211
SALARY_SERVICE_PORT=4212
FINANCIAL_SERVICE_PORT=4213

# Reserved for future expansion: 4200, 4204, 4214-4219

# ============================================
# Database Configuration (Shared database-server)
# ============================================
DB_HOST=db-server-postgres
DB_PORT=5432
DB_USER=dbadmin
DB_PASSWORD=your_database_password_here

# Database Names (one per service)
DB_NAME=speakasap_content_db
# Also configure for:
# - speakasap_certification_db
# - speakasap_assessment_db
# - speakasap_course_db
# - speakasap_education_db
# - speakasap_user_db
# - speakasap_payment_db
# - speakasap_notification_db
# - speakasap_salary_db
# - speakasap_financial_db

# ============================================
# Shared Microservices Configuration
# ============================================
# Auth Microservice
AUTH_SERVICE_URL=http://auth-microservice:3370
AUTH_MICROSERVICE_PORT=3370

# Logging Microservice
LOGGING_SERVICE_URL=http://logging-microservice:3367
LOGGING_MICROSERVICE_PORT=3367

# Notifications Microservice
NOTIFICATIONS_MICROSERVICE_URL=http://notifications-microservice:3368
NOTIFICATIONS_MICROSERVICE_PORT=3368

# Payments Microservice
PAYMENTS_MICROSERVICE_URL=http://payments-microservice:3468
PAYMENTS_MICROSERVICE_PORT=3468

# AI Microservice
AI_SERVICE_URL=http://ai-microservice:3380
AI_MICROSERVICE_PORT=3380

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production

# Frontend Configuration
